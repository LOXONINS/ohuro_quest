      <% if user_signed_in? %>
        <%= link_to "新規投稿", "#", class: "px-2 py-1 rounded hover:bg-gray-100" %>
        <%= button_to "ログアウト", destroy_user_session_path, method: :delete, class: "px-2 py-1 rounded hover:bg-gray-100" %>
      <% else %>
        <%= link_to "ユーザー登録", new_user_registration_path, class: "px-2 py-1 rounded hover:bg-gray-100" %>
