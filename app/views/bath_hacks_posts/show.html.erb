<div class="bg-gray-100 p-6 rounded-lg shadow-sm">

  <div class="flex justify-between items-center mb-4">
    <div class="text-xs text-gray-500">
      <%= @bath_hacks_post.user.name %> さん
    </div>

    <%# ログイン中かつ自分の投稿の時だけ編集・削除を表示 %>
    <% if user_signed_in? && current_user.own?(@bath_hacks_post) %>
      <div class="flex gap-3">
        <%= link_to "編集", edit_bath_hacks_post_path(@bath_hacks_post), class: "text-xs text-blue-600 hover:underline" %>
        <%= link_to "削除", bath_hacks_post_path(@bath_hacks_post), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class: "text-xs text-red-600 hover:underline" %>
      </div>
    <% end %>
  </div>

  <h1 class="text-xl font-bold text-gray-900 mb-4">
    <%= @bath_hacks_post.title %>
  </h1>

  <div class="text-sm text-gray-800 leading-relaxed whitespace-pre-wrap mb-8"><%= @bath_hacks_post.content %></div>

  <div class="text-xs text-gray-400 text-right">
    <%= @bath_hacks_post.updated_at.strftime("%Y/%m/%d") %>
  </div>

</div>