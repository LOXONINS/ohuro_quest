<div class="relative bg-gray-50 border border-gray-200 rounded-lg p-4 h-40">

  <!-- 投稿者名 -->
  <div class="text-xs text-gray-500">
    <%= bath_hacks_post.user.name %> さん
  </div>

  <!-- タイトル（詳細リンク） -->
<h2 class="text-base font-semibold truncate">
  <%= link_to "#",
        class: "block text-gray-800 hover:underline hover:text-gray-900" do %>
    <%= bath_hacks_post.title %>
  <% end %>
</h2>

  <!-- 本文（高さ制限） -->
  <p class="text-sm text-gray-700 leading-relaxed overflow-hidden" style="max-height: 4.5rem;">
    <%= bath_hacks_post.content %>
  </p>

  <!-- 更新日 -->
  <div class="absolute bottom-3 right-4 text-xs text-gray-400">
    <%= bath_hacks_post.created_at.strftime("%Y/%m/%d") %>
  </div>

</div>
