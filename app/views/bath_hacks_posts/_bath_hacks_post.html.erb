<div class="relative bg-gray-50 border border-gray-200 rounded-lg p-4 h-40">

  <div class="flex justify-between items-center mb-1">
    <div class="text-xs text-gray-500">
      <%= bath_hacks_post.user.name %> さん
    </div>

    <% if user_signed_in? && current_user.own?(bath_hacks_post) %>
      <div class="flex gap-3">
        <%= link_to "編集", edit_bath_hacks_post_path(bath_hacks_post), class: "text-sm font-medium text-blue-600 hover:underline" %>
        <%= link_to "削除", "#", data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class: "text-sm font-medium text-red-600 hover:underline" %>
      </div>
    <% end %>
  </div>

  <h2 class="text-base font-semibold truncate mb-1">
    <%= link_to bath_hacks_post_path(bath_hacks_post),
          class: "block text-gray-800 hover:underline hover:text-gray-900" do %>
      <%= bath_hacks_post.title %>
  </h2>
<% end %>

  <p class="text-sm text-gray-700 leading-relaxed overflow-hidden" style="max-height: 2.8rem;">
    <%= bath_hacks_post.content %>
  </p>

  <div class="absolute bottom-3 right-4 text-xs text-gray-400">
    <%= bath_hacks_post.created_at.strftime("%Y/%m/%d") %>
  </div>

</div>